			<label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Tên sản phẩm </label>

			<div class="col-sm-9">
				{{ form_widget(form.name) }}
        		{{ form_errors(form.name) }}
			</div>
		</div>

		<div class="form-group">
			<label class="col-sm-3 control-label no-padding-right" for="form-field-1-1"> Giá </label>

			<div class="col-sm-4">
				{{ form_widget(form.price) }}
        		{{ form_errors(form.price) }}
			</div>
		</div>

		<div class="space-4"></div>

		<div class="form-group">
			<label class="col-sm-3 control-label no-padding-right" for="form-field-2"> Mô tả </label>

			<div class="col-sm-6">
				<div class="widget-box widget-color-blue">
					<div class="widget-header widget-header-small">  </div>

					<div class="widget-body">
